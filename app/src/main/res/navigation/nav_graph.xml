<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.avwaveaf.gratify.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailMemoryFragment"
            app:destination="@id/detailMemoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/addMemoryFragment"
        android:name="com.avwaveaf.gratify.fragments.AddMemoryFragment"
        android:label="fragment_add_memory"
        tools:layout="@layout/fragment_add_memory" />
    <fragment
        android:id="@+id/detailMemoryFragment"
        android:name="com.avwaveaf.gratify.fragments.DetailMemoryFragment"
        android:label="fragment_detail_memory"
        tools:layout="@layout/fragment_detail_memory" >
        <action
            android:id="@+id/action_detailMemoryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <!--ATTACHING NOTE MODEL DATA TO DATA BINDING-->
        <argument
            android:name="memory"
            app:nullable="true"
            app:argType="com.avwaveaf.gratify.models.Memory" />
    </fragment>
</navigation>